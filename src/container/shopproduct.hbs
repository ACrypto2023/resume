      </div>
      <div class='col-1'></div>
      
      <div class='col-5'>
        <table class="table">
          <thead>
            <tr>
              {{#each item.head}}
              <th>
                <b>{{this}}</b>
              </th>
              {{/each}}
              </tr>
          </thead>
          <tbody>
              {{#each item.body}}
                <tr>
                  {{#each this}}
                    <th>
                      {{this}}
                    </th>
                  {{/each}}
                <th>
              {{/each}}
          </tbody>
        </table>
        <div class="card">
           <div class="card-header">
              {{param.title}}
           </div>
          <ul class="list-group list-group-flush">
            {{#each param.list}}
            <li class="list-group-item">{{this}}</li>
            {{/each}}

          </ul>
        </div> <br>
        {{#if alert.isError}}
        <div class="alert alert-danger" role="alert">
           {{alert.text}}
        </div>
        {{/if}}

      </div>
      
      




  {{/with}}

</div>


      <div class="card mt-2 ">
          <div class="card-body">
            {{#each productData.actionList}}
              {{#if isWarning}}
                <button type="button" class="btn btn-warning mx-2">{{name}}</button>
              {{/if}}
              {{#if isError}}
                <button type="button" class="btn btn-outline-danger mx-2">{{name}}</button>
              {{/if}}
              {{#if isSuccess}}
