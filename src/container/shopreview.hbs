            <a type="button" target="_blank" class="btn btn-warning  btn-sm" href={{link}}>{{text}}</a>
          {{/if}}
          {{#if isSuccess}}
            <a type="button" target="_blank" class="btn btn-success  btn-sm" href={{link}}>{{text}}</a>          
          {{/if}}
          {{#if isDanger}}
