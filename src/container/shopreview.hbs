                  {{#if isPrimary}}
                  <a type="button" target="_blank" class="btn btn-primary  btn-sm ms-3 " href={{link}}>{{text}}</a>          
                  {{/if}}
                  {{#if isSecondary}}
                  <a type="button" target="_blank" class="btn btn-secondary  btn-sm ms-3 my-2" href={{link}}>{{text}}</a>          
                  {{/if}}
                {{/each}}
            </div>
          </div>
          <div class='card'>
            <div class="card-body py-3 ps-3 pe-1">
              <div>{{goodsInfo.seller.title}}: <b>{{goodsInfo.seller.value}}</b></div>
            </div>

          </div>
        </div>
      </div>

  
