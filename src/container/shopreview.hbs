<main>
  
  {{>shopheader}}

 
 
 
 
 
  {{#with formBlock}}



      
     
      <div class="row">
        <div class="col-8">
          <h2 class="my-4">{{header}}</h2>
          <p class="my-4">{{rating.title}}: {{rating.value}}</p>
          <ul class="nav nav-tabs">
        
            {{#each actionBlock.tabs}}
              <li class="nav-item">
                {{#if isActive}}
                <a class="nav-link active" aria-current="page" href="#">{{text}}</a>
                {{else}}
                <a class="nav-link" href="#">{{text}}</a>
                {{/if}}
              
              </li>
            {{/each}}
            
          </ul>
          <br><hr><br>
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col-7 mt-3">
                  <p>{{actionBlock.field.placeholder}}</p>
                </div>
                <div class="col-5 text-end mt-3">
                  <a type="button" target="_blank" class="btn btn-secondary  btn-sm" href={{actionBlock.field.button.link}}>{{actionBlock.field.button.text}}</a>
                </div>
              </div>
            </div>
          
          </div>
          <br><hr><br>
        <h4 class="mb-3">{{feedbackBlock.title}}</h4>
        <br>
        {{#each feedbackBlock.buttons}}
          {{#if isWarning}}
            <a type="button" target="_blank" class="btn btn-warning  btn-sm" href={{link}}>{{text}}</a>
          {{/if}}
          {{#if isSuccess}}
            <a type="button" target="_blank" class="btn btn-success  btn-sm" href={{link}}>{{text}}</a>          
          {{/if}}
          {{#if isDanger}}
          <a type="button" target="_blank" class="btn btn-danger  btn-sm" href={{link}}>{{text}}</a>          
          {{/if}}

        {{/each}}
        
        </div>
        <div class="col-4">
          <div class="card my-2">
            <div class="card-body">
              <img width='100' height='100' src={{goodsInfo.photo}} />
              <h6 class="mt-3">{{goodsInfo.name}}</h6>
            </div>
          </div>
          <div class="card  my-2">
            <div class="catd-body">
              <h6 class="ms-3 mt-3">{{goodsInfo.price}}</h6>
              <p class="ms-3">Є в наявності</p>
                {{#each goodsInfo.buttons}}
                  {{#if isPrimary}}
                  <a type="button" target="_blank" class="btn btn-primary  btn-sm ms-3 " href={{link}}>{{text}}</a>          
                  {{/if}}
                  {{#if isSecondary}}
                  <a type="button" target="_blank" class="btn btn-secondary  btn-sm ms-3 my-2" href={{link}}>{{text}}</a>          
                  {{/if}}
                {{/each}}
            </div>
          </div>
          <div class='card'>
            <div class="card-body py-3 ps-3 pe-1">
              <div>{{goodsInfo.seller.title}}: <b>{{goodsInfo.seller.value}}</b></div>
            </div>

          </div>
        </div>
      </div>

  
  {{/with}}
  {{!-- /with formBlock --}}
  <br><hr><br>

  {{#each reviewList}}
    {{>reviewItem}}
  {{/each}}
  {{!-- /each reviewList --}}
  <br>
   {{>shopaction}}
   <br><hr>

  

  
  
  {{>shopfooter}}


</main>