<div class='ms-5 mt-5'>

  <div><h1>Web</h1></div>
  <div>
    {{#with web}}
      <h2 class='mt-4'>Languages:</h2>
      <ul class='my-4'>
        {{#each languages}}
          <li class='my-2'>
            {{name}}, version:
            {{version}}, ({{description}})
            {{#if elements}}
              <ul>

                <div class='mt-4'>Elements:</div>
                {{#each elements}}
                  <li class='my-2'>
                    {{name}}
                    ({{description}})
                    <ul class='mt-2'>
                      {{#each attributes}}
                        <li>
                          {{name}}
                          ({{description}})
                        </li>
                      {{/each}}
                    </ul>
                  </li>
                {{/each}}
              </ul>
            {{/if}}

          </li>
        {{/each}}
      </ul>
    {{/with}}
  </div>
</div>

